class Solution {
    public int rob(int[] nums) {
        if(nums.length == 1) return nums[0];
        return Math.max(rob1(nums,0,nums.length-2),
                        rob1(nums,1,nums.length-1));
    }
    int rob1(int[] n, int l, int r){
        int prev = 0, cur = 0;
        for(int i=l;i<=r;i++){
            int tmp = Math.max(cur, prev + n[i]);
            prev = cur;
            cur = tmp;
        }
        return cur;
    }
}
