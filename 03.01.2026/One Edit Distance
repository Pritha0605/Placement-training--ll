class Solution:
    def isOneEditDistance(self, s, t):
        if abs(len(s)-len(t)) > 1: return False
        if len(s) > len(t): s, t = t, s
        for i in range(len(s)):
            if s[i] != t[i]:
                return s[i+1:] == t[i+1:] or s[i:] == t[i+1:]
        return len(s)+1 == len(t)
