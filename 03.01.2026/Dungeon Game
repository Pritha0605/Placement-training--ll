class Solution:
    def calculateMinimumHP(self, d):
        m, n = len(d), len(d[0])
        dp = [[10**9]*(n+1) for _ in range(m+1)]
        dp[m][n-1] = dp[m-1][n] = 1
        for i in range(m-1,-1,-1):
            for j in range(n-1,-1,-1):
                need = min(dp[i+1][j], dp[i][j+1]) - d[i][j]
                dp[i][j] = max(1, need)
        return dp[0][0]
